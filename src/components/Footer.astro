---
import { Heart, Code2, Rocket } from "lucide-react";
---

<footer
  class="relative py-12 px-4 sm:px-6 lg:px-8 bg-white dark:bg-slate-900 border-t border-slate-200 dark:border-slate-800"
>
  <div class="max-w-7xl mx-auto">
    {/* Top Section */}
    <div class="grid md:grid-cols-3 gap-8 mb-8">
      {/* Brand */}
      <div class="space-y-4">
        <div class="flex items-center space-x-2">
          <div
            class="w-10 h-10 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-lg flex items-center justify-center"
          >
            <span class="text-white">JG</span>
          </div>
          <span class="text-slate-800 dark:text-white"> Jose Gale </span>
        </div>
        <p class="text-slate-600 dark:text-slate-400 text-sm">
          Full Stack Developer crafting modern web experiences
        </p>
      </div>

      {/* Quick Links */}
      <div class="space-y-4">
        <h4 class="text-slate-900 dark:text-white flex items-center space-x-2">
          <Rocket className="w-4 h-4" />
          <span>Quick Links</span>
        </h4>
        <div class="flex flex-col space-y-2">
          <a
            href="#home"
            class="text-slate-600 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors text-sm"
          >
            Home
          </a>
          <a
            href="#projects"
            class="text-slate-600 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors text-sm"
          >
            Projects
          </a>
          <a
            href="#experience"
            class="text-slate-600 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors text-sm"
          >
            Experience
          </a>
        </div>
      </div>

      {/* Contact */}
      <div class="space-y-4">
        <h4 class="text-slate-900 dark:text-white flex items-center space-x-2">
          <Code2 className="w-4 h-4" />
          <span>Get In Touch</span>
        </h4>
        <div class="flex flex-col space-y-2 text-sm">
          <a
            href="mailto:josedavidgale@gmail.com"
            class="text-slate-600 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
          >
            josedavidgale@gmail.com
          </a>
          <a
            href="https://github.com/JdgaleTorre"
            target="_blank"
            rel="noopener noreferrer"
            class="text-slate-600 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
          >
            GitHub
          </a>
          <a
            href="https://linkedin.com"
            target="_blank"
            rel="noopener noreferrer"
            class="text-slate-600 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
          >
            LinkedIn
          </a>
        </div>
      </div>
    </div>

    {/* Bottom Section */}
    <div
      class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0"
    >
      <p
        class="text-slate-600 dark:text-slate-400 text-sm flex items-center space-x-2"
      >
        <span>Â© 2025 Jose Gale. Built with</span>
        <Heart className="w-4 h-4 text-red-500 fill-current" />
        <span>and Astro + Tailwind CSS</span>
      </p>
    </div>
  </div>
</footer>
