---
import { ArrowRight, ExternalLink, Filter, Github } from "lucide-react";
import { Image } from "astro:assets";
import { projectsData } from "../projects";
---

<section id="projects" class="py-20 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    {/* Section Header */}
    <div class="text-center mb-16">
      <h2 class="text-slate-900 dark:text-white mb-4">Featured Projects</h2>
      <p class="text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
        A showcase of my recent work across frontend, backend, and AI-powered
        applications
      </p>
    </div>

    {/* Projects Grid */}
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        projectsData.map((project) => (
          <div class="group relative bg-white dark:bg-slate-800 rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
            {/* Gradient border effect */}
            <div class="absolute inset-0 bg-gradient-to-br from-blue-500 via-indigo-500 to-purple-500 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-2xl" />

            <div class="relative m-[2px] bg-white dark:bg-slate-800 rounded-2xl overflow-hidden">
              {/* Project Image */}
              <div class="relative h-48 overflow-hidden">
                <Image
                  src={project.image}
                  alt={project.title}
                  class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500"
                  inferSize={true}
                  width={500}
                  height={400}
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
              </div>

              {/* Project Content */}
              <div class="p-6 space-y-4">
                <h3 class="text-slate-900 dark:text-white">{project.title}</h3>

                <p class="text-slate-600 dark:text-slate-400 line-clamp-3">
                  {project.description}
                </p>

                {/* Tags */}
                <div class="flex flex-wrap gap-2">
                  {project.tags.slice(0, 3).map((tag, index) => (
                    <span class="px-3 py-1 bg-blue-50 dark:bg-blue-900/20 text-blue-600 dark:text-blue-400 rounded-full text-sm">
                      {tag}
                    </span>
                  ))}
                  {project.tags.length > 3 && (
                    <span class="px-3 py-1 bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-400 rounded-full text-sm">
                      +{project.tags.length - 3}
                    </span>
                  )}
                </div>

                {/* Action Buttons */}
                <div class="flex flex-col space-y-2 pt-4">
                  <a
                    href={`project/${project.id}`}
                    class="w-full flex items-center justify-center space-x-2 px-4 py-2 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white rounded-lg transition-all transform hover:scale-105"
                  >
                    <span>See More</span>
                    <ArrowRight className="w-4 h-4" />
                  </a>
                  <div class="flex space-x-2">
                    <a
                      href={project.liveUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex-1 flex items-center justify-center space-x-2 px-4 py-2 bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 text-slate-700 dark:text-slate-300 rounded-lg transition-all"
                    >
                      <ExternalLink className="w-4 h-4" />
                      <span>Demo</span>
                    </a>
                    <a
                      href={project.codeUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex items-center justify-center px-4 py-2 bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 text-slate-700 dark:text-slate-300 rounded-lg transition-all"
                      aria-label="View code"
                    >
                      <Github className="w-4 h-4" />
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
