---
import { SocialButton } from "../components/SocialButton";
import GitHubIcon from "../../public/icons/github.svg";
import LinkedInIcon from "../../public/icons/linkedin.svg";
import { Mail } from "lucide-react";

const socials = [
  {
    label: "GitHub",
    link: "https://github.com/yourusername",
    icon: GitHubIcon,
  },
  {
    label: "LinkedIn",
    link: "https://linkedin.com/in/yourusername",
    icon: LinkedInIcon,
  },
  {
    label: "Email",
    link: "mailto:youremail@example.com",
    icon: Mail,
  },
];
---

<section id="hero" class="min-h-screen flex items-center">
  <div class="max-w-6xl mx-auto text-center justify-cente">
    <!-- {/* Background image positioned as right border */}
         relative border border-white rounded-3xl overflow-hidden
        <div class="absolute right-0 top-0 bottom-0 w-1/3">
          <Image
            src={BigBen}
            alt="Jose Gale - Full Stack Developer"
            class="object-cover object-right h-full"
          />
          <div
            class="absolute inset-0 bg-gradient-to-r from-primary/70 to-black/0"
          >
          </div>
        </div>

        {/* Content with padding to avoid overlap with image border */} -->
    <div class="flex md:flex-row flex-col">
      <div
        class="flex lg:flex-col md:flex-row justify-evenly lg:space-y-4 md:space-x-4 p-6 md:p-12"
      >
        {
          socials.map((social) => (
            <SocialButton label={social.label} link={social.link} client:load>
              <social.icon
                class="w-10 h-10 text-primary group-hover:text-white dark:text-primary-dark transition-colors duration-300"
                className="w-10 h-10 text-primary group-hover:text-white dark:text-primary-dark transition-colors duration-300"
              />
            </SocialButton>
          ))
        }
      </div>

      <div
        class="relative z-10 flex flex-col space-y-4 md:space-y-6 p-6 md:p-12"
      >
        <h2
          class="text-5xl md:text-7xl font-bold text-primary dark:text-accent"
        >
          Jose Gale
        </h2>
        <p class="text-xl md:text-2xl dark:text-white">
          Full Stack Developer & Data Analyst
        </p>
        <p
          class="text-lg text-muted-foreground max-w-2xl mx-auto leading-relaxed dark:text-white"
        >
          Crafting digital solutions with clean code and data-driven insights.
          Passionate about building scalable applications and uncovering
          meaningful patterns in data.
        </p>
        <div class="flex flex-col md:flex-row justify-evenly">
          <a
            href="#projects"
            class="bg-primary hover:bg-primary-dark text-white px-6 py-3 rounded-lg transition mb-4"
          >
            See My Work
          </a>
          <a
            href="#projects"
            class="bg-background border border-primary text-primary hover:bg-primary-dark hover:text-white px-6 py-3 rounded-lg transition mb-4"
          >
            Download Resume
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
