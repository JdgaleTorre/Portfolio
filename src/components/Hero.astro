---
import GitHubIcon from "../../public/icons/github.svg";
import LinkedInIcon from "../../public/icons/linkedin.svg";
import { ArrowDown, Mail } from "lucide-react";

const socialLinks = [
  {
    label: "GitHub",
    link: "https://github.com/JdgaleTorre",
    icon: GitHubIcon,
    color: "hover:text-gray-900 dark:hover:text-white",
  },
  {
    label: "LinkedIn",
    link: "https://www.linkedin.com/in/josedavidgale/",
    icon: LinkedInIcon,
    color: "hover:text-blue-600 dark:hover:text-blue-400",
  },
  {
    label: "Email",
    link: "mailto:josedavidgale@gmail.com",
    icon: Mail,
    color: "hover:text-red-600 dark:hover:text-red-400",
  },
];
---

<section
  id="home"
  class="min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8 pt-20"
>
  <div class="max-w-7xl mx-auto w-full">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      {/* Left Content */}
      <div class="space-y-8 text-center lg:text-left">
        <div class="space-y-4">
          <div class="inline-block">
            <span
              class="px-4 py-2 bg-gradient-to-r from-blue-500/10 to-indigo-500/10 dark:from-blue-500/20 dark:to-indigo-500/20 text-blue-600 dark:text-blue-400 rounded-full border border-blue-500/20"
            >
              Full Stack Developer
            </span>
          </div>

          <h1 class="text-slate-900 dark:text-white">
            Hi, I'm <span
              class="bg-gradient-to-r from-blue-600 to-indigo-600 dark:from-blue-400 dark:to-indigo-400 bg-clip-text text-transparent"
              >Jose Gale</span
            >
          </h1>

          <p
            class="text-slate-600 dark:text-slate-400 max-w-2xl mx-auto lg:mx-0"
          >
            Crafting fast, scalable, and modern web applications.
          </p>
        </div>

        <p class="text-slate-700 dark:text-slate-300 max-w-2xl mx-auto lg:mx-0">
          I'm a passionate full stack developer with extensive experience in
          building high-performance web applications. I specialize in modern
          frontend frameworks like React and Next.js, coupled with robust
          backend solutions using Node.js, Django, and Python. With expertise
          across cloud platforms (AWS, Google Cloud, Firebase) and a deep
          understanding of both SQL and NoSQL databases, I bring ideas to life
          with clean code and scalable architecture.
        </p>

        {/* Social Links */}
        <div class="flex justify-center lg:justify-start space-x-4">
          {
            socialLinks.map((social) => {
              const Icon = social.icon;
              return (
                <a
                  href={social.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class={`group p-3 bg-white dark:bg-slate-800 rounded-lg shadow-md hover:shadow-xl transition-all transform hover:-translate-y-1 text-slate-600 dark:text-slate-400 ${social.color}`}
                  aria-label={social.label}
                >
                  <Icon className="w-6 h-6" />
                </a>
              );
            })
          }
        </div>

        {/* CTA Button */}
        <div class="flex justify-center lg:justify-start">
          <button
            id="button-projects"
            class={`group cursor-pointer px-8 py-4 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white rounded-lg shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-1 flex items-center space-x-2`}
          >
            <span>View My Work</span>
            <ArrowDown
              className="w-5 h-5 group-hover:translate-y-1 transition-transform"
            />
          </button>
        </div>
      </div>

      {/* Right Content - Avatar */}
      <div class="flex justify-center lg:justify-end">
        <div class="relative">
          {/* Glassmorphism container */}
          <div class="relative w-80 h-80 sm:w-96 sm:h-96">
            {/* Gradient border */}
            <div
              class="absolute inset-0 bg-gradient-to-br from-blue-500 via-indigo-500 to-purple-500 rounded-3xl rotate-6 animate-pulse"
            >
            </div>

            {/* Image container */}
            <div
              class="absolute inset-2 bg-white dark:bg-slate-900 rounded-3xl overflow-hidden shadow-2xl"
            >
              <!-- <ImageWithFallback
                src="https://images.unsplash.com/photo-1737575655055-e3967cbefd03?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3Nzg4Nzd8MHwxfHNlYXJjaHwxfHxwcm9mZXNzaW9uYWwlMjBkZXZlbG9wZXIlMjBwb3J0cmFpdHxlbnwxfHx8fDE3NjMwMjk3NDJ8MA&ixlib=rb-4.1.0&q=80&w=1080&utm_source=figma&utm_medium=referral"
                alt="Jose Gale - Full Stack Developer"
                className="w-full h-full object-cover"
              /> -->
            </div>

            {/* Floating badges */}
            <div
              class="absolute -top-4 -right-4 px-4 py-2 bg-white dark:bg-slate-800 rounded-full shadow-xl border-2 border-blue-500"
            >
              <span class="text-blue-600 dark:text-blue-400">âš¡ React</span>
            </div>
            <!-- <div
              class="absolute top-4 left-20 px-4 py-2 bg-white dark:bg-slate-800 rounded-full shadow-xl border-2 border-blue-500"
            >
              <span class="text-blue-600 dark:text-blue-400">âš¡ Angular</span>
            </div> -->
            <div
              class="absolute -bottom-4 -left-4 px-4 py-2 bg-white dark:bg-slate-800 rounded-full shadow-xl border-2 border-indigo-500"
            >
              <span class="text-indigo-600 dark:text-indigo-400"
                >ðŸš€ Node.js</span
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const handleClick = () => {
    const element = document.getElementById("projects");

    if (element) {
      const offset = 80;
      const elementPosition =
        element.getBoundingClientRect().top + window.scrollY;
      window.scrollTo({
        top: elementPosition - offset,
        behavior: "smooth",
      });
    }
  };

  document
    .getElementById("button-projects")
    ?.addEventListener("click", handleClick);
</script>
