    <title>{title}</title>
  </head>
  <body
    class="min-h-screen grid grid-rows-[auto_1fr_auto] bg-background dark:bg-background-dark dark:text-white"
  >
    <!-- Header -->
    <NavBar client:load />

    <!-- Main Content -->

    <slot />

