---
import {
  ArrowLeft,
  ExternalLink,
  Github,
  Calendar,
  Users,
  Award,
  CheckCircle,
} from "lucide-react";
import { projectsData } from "../../projects";
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";

export function getStaticPaths() {
  return [
    { params: { projectid: "devtools" } },
    { params: { projectid: "movinder" } },
    { params: { projectid: "pokedex" } },
    { params: { projectid: "memory-game" } },
    { params: { projectid: "game-of-life" } },
    { params: { projectid: "pomodoro" } },
  ];
}

const { projectid } = Astro.params;

const project = projectsData.find((p) => p.id === projectid);

if (!project) {
}
---

<Layout title="Welcome to my Portfolio.">
  <div class="min-h-screen pt-24 pb-20 px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto">
      {/* Back Button */}
      <a
        href="/#projects"
        id="button-back"
        class="group flex items-center space-x-2 text-slate-600
      dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400
      transition-colors mb-8"
      >
        <ArrowLeft
          className="w-5 h-5 group-hover:-translate-x-1 transition-transform"
        />
        <span>Back to Projects</span>
      </a>

      {/* Project Header */}
      <div
        class="bg-white dark:bg-slate-800 rounded-3xl shadow-2xl overflow-hidden mb-8"
      >
        {/* Hero Image */}
        <div class="relative h-96 overflow-hidden">
          <Image
            src={project!.image}
            alt={project!.title}
            class="w-full h-full object-cover"
            inferSize={true}
            width={500}
            height={400}
            loading="eager"
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"
          >
          </div>

          {/* Title Overlay */}
          <div class="absolute bottom-0 left-0 right-0 p-8">
            <div class="flex items-center space-x-3 mb-3">
              <span
                class="px-4 py-2 bg-white/20 backdrop-blur-md text-white rounded-full border border-white/30"
              >
                {project!.category}
              </span>
            </div>
            <h1 class="text-white mb-2">{project!.title}</h1>
            <p class="text-white/90 text-xl max-w-3xl">
              {project!.description}
            </p>
          </div>
        </div>

        {/* Quick Info Bar */}
        <div
          class="grid grid-cols-2 md:grid-cols-4 gap-4 p-8 bg-slate-50 dark:bg-slate-900/50 border-b border-slate-200 dark:border-slate-700"
        >
          <div class="flex items-center space-x-3">
            <div class="p-3 bg-green-100 dark:bg-green-900/30 rounded-lg">
              <CheckCircle
                className="w-5 h-5 text-green-600 dark:text-green-400"
              />
            </div>
            <div>
              <p class="text-slate-500 dark:text-slate-400 text-sm">Status</p>
              <p class="text-slate-900 dark:text-white">{project!.status}</p>
            </div>
          </div>
        </div>
      </div>

      {/* Main Content Grid */}
      <div class="grid lg:grid-cols-3 gap-8">
        {/* Left Column - Main Content */}
        <div class="lg:col-span-2 space-y-8">
          {/* Overview */}
          <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-lg p-8">
            <h2
              class="text-slate-900 dark:text-white mb-4 flex items-center space-x-2"
            >
              <span
                class="w-1 h-6 bg-gradient-to-b from-blue-500 to-indigo-600 rounded-full"
              ></span>
              <span>Project Overview</span>
            </h2>
            <p class="text-slate-600 dark:text-slate-300 leading-relaxed mb-6">
              {project!.fullDescription}
            </p>
            <p class="text-slate-600 dark:text-slate-300 leading-relaxed">
              {project!.challenge}
            </p>
          </div>

          {/* Key Features */}
          <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-lg p-8">
            <h2
              class="text-slate-900 dark:text-white mb-6 flex items-center space-x-2"
            >
              <span
                class="w-1 h-6 bg-gradient-to-b from-blue-500 to-indigo-600 rounded-full"
              ></span>
              <span>Key Features</span>
            </h2>
            <div class="grid md:grid-cols-2 gap-4">
              {
                project!.features.map((feature, index) => (
                  <div class="flex items-start space-x-3 p-4 bg-slate-50 dark:bg-slate-900/50 rounded-xl hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-colors">
                    <CheckCircle className="w-5 h-5 text-blue-600 dark:text-blue-400 flex-shrink-0 mt-0.5" />
                    <span class="text-slate-700 dark:text-slate-300">
                      {feature}
                    </span>
                  </div>
                ))
              }
            </div>
          </div>

          {/* Technical Implementation */}
          <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-lg p-8">
            <h2
              class="text-slate-900 dark:text-white mb-6 flex items-center space-x-2"
            >
              <span
                class="w-1 h-6 bg-gradient-to-b from-blue-500 to-indigo-600 rounded-full"
              ></span>
              <span>Technical Implementation</span>
            </h2>
            <div class="space-y-6">
              {
                project!.technicalDetails.map((detail, index) => (
                  <div>
                    <h3 class="text-slate-900 dark:text-white mb-3 flex items-center space-x-2">
                      <span class="text-blue-600 dark:text-blue-400">â–¸</span>
                      <span>{detail.title}</span>
                    </h3>
                    <p class="text-slate-600 dark:text-slate-300 leading-relaxed pl-5">
                      {detail.description}
                    </p>
                  </div>
                ))
              }
            </div>
          </div>
        </div>

        {/* Right Column - Sidebar */}
        <div class="space-y-6">
          {/* Action Buttons */}
          <div
            class="bg-white dark:bg-slate-800 rounded-2xl shadow-lg p-6 space-y-4"
          >
            <a
              href={project!.liveUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center justify-center space-x-2 w-full px-6 py-3 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white rounded-lg transition-all transform hover:scale-105 shadow-lg"
            >
              <ExternalLink className="w-5 h-5" />
              <span>View Live Demo</span>
            </a>

            <a
              href={project!.codeUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center justify-center space-x-2 w-full px-6 py-3 bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 text-slate-700 dark:text-slate-300 rounded-lg transition-all transform hover:scale-105"
            >
              <Github className="w-5 h-5" />
              <span>View Source Code</span>
            </a>
          </div>

          {/* Tech Stack */}
          <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-lg p-6">
            <h3 class="text-slate-900 dark:text-white mb-4">Tech Stack</h3>
            <div class="space-y-4">
              {
                Object.entries(project!.techStack).map(
                  ([category, technologies]) => (
                    <div>
                      <p class="text-slate-500 dark:text-slate-400 text-sm mb-2 uppercase tracking-wide">
                        {category}
                      </p>
                      <div class="flex flex-wrap gap-2">
                        {(technologies as string[]).map((tech, index) => (
                          <span class="px-3 py-1 bg-blue-50 dark:bg-blue-900/20 text-blue-600 dark:text-blue-400 rounded-lg text-sm border border-blue-200/50 dark:border-blue-500/20">
                            {tech}
                          </span>
                        ))}
                      </div>
                    </div>
                  )
                )
              }
            </div>
          </div>

          {/* Tags */}
          <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-lg p-6">
            <h3 class="text-slate-900 dark:text-white mb-4">Tags</h3>
            <div class="flex flex-wrap gap-2">
              {
                project!.tags.map((tag, index) => (
                  <span class="px-3 py-1 bg-slate-100 dark:bg-slate-700 text-slate-700 dark:text-slate-300 rounded-full text-sm hover:bg-blue-50 dark:hover:bg-blue-900/20 hover:text-blue-600 dark:hover:text-blue-400 transition-colors cursor-default">
                    {tag}
                  </span>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
